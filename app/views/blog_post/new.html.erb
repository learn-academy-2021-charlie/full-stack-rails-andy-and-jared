h3>Add a New post to our Blogs!</h3>
<%= form_with model: @blogs, local: true do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>

  <br>
  <%= form.submit 'Add a Blog!' %>
<% end %>

<h2><%= link_to 'Home', blog_posts_path %></h2>